<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUserName"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbtn"
            android:elevation="5dp"
            android:fontFamily="@font/psr"
            android:minHeight="40dp"
            android:minWidth="120dp"
            android:textAllCaps="false"
            tools:text="Leanne Graham" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/psr"
            android:textAllCaps="false"
            android:textStyle="bold"
            tools:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderi" />
    </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="30dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/divider"
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/tvBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                android:padding="6dp"
                tools:text="est rerum tempore vitae nsequi sint nihil reprehenderit dolor beatae ea dolores neque\nfugiat blanditiis voluptate porro vel nihil molestiae ut reiciendis\nqui aperiam non debitis possimus qui neque nisi nulla" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="200dp"
            android:paddingStart="11dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnComments"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbtn"
                android:backgroundTint="@android:color/holo_red_light"
                android:elevation="5dp"
                android:fontFamily="@font/psr"
                android:minHeight="30dp"
                android:text="Comments"
                android:textAllCaps="false" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
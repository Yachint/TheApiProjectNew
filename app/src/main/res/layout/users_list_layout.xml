<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="top"
        android:gravity="start"
        android:layout_marginBottom="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="start"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_portrait_black_24dp" />

        <LinearLayout
            android:layout_marginTop="-70dp"
            android:layout_marginStart="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                android:text="Name :  " />

            <TextView
                android:id="@+id/utvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                tools:text="Leanne Graham" />
        </LinearLayout>
        <LinearLayout

        android:layout_marginStart="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                android:text="Username :  " />

            <TextView
                android:id="@+id/utvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                tools:text="Bret" />
    </LinearLayout>

        <LinearLayout

            android:layout_marginStart="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                android:text="Email :  " />

            <TextView
                android:id="@+id/utvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/psr"
                tools:text="Sincere@april.biz" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <View
                android:layout_marginTop="100dp"
                android:layout_marginStart="40dp"
                android:id="@+id/divider"
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:background="@android:color/holo_blue_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="120dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginBottom="-30dp"
                android:layout_marginStart="160dp"
                android:id="@+id/ubtnTodos"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbtn"
                android:backgroundTint="@color/yellow"
                android:elevation="5dp"
                android:fontFamily="@font/psr"
                android:minHeight="30dp"
                android:minWidth="80dp"
                android:text="Todos"
                android:textAllCaps="false" />

            <Button
                android:layout_marginBottom="-30dp"
                android:layout_marginStart="248dp"
                android:id="@+id/ubtnPosts"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbtn"
                android:backgroundTint="@android:color/holo_blue_light"
                android:elevation="5dp"
                android:fontFamily="@font/psr"
                android:minHeight="30dp"
                android:minWidth="80dp"
                android:text="Posts"
                android:textAllCaps="false" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psr"
                    android:text="Phone :   " />

                <TextView
                    android:id="@+id/utvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psr"
                    tools:text="92998-3874" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psr"
                    android:text="Website :   " />

                <TextView
                    android:id="@+id/utvWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/psr"
                    tools:text="hildegard.org" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>